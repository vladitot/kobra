{
  "customCommands": [
    {
      "alias": "compose-help",
      "command": "docker-compose",
      "description": "Show docker-compose help"
    }
  ],
  "packages": [
    {
      "name": "koel",
      "type": "git",
      "url": "git@gitlab.lenta.tech:lentochka/site/php-grpc-echo-service.git",
      "reference": "master",
      "paths": [
        {
          "origin": "src/innerVendor/lentochka/docker/docker-compose.yml",
          "destination": "infra/docker-compose/docker-compose.yml",
          "appendFileNamesWithPackageName": true
        },
        {
          "origin": "src/innerVendor/lentochka/docker/php",
          "destination": "infra/images/php",
          "appendFileNamesWithPackageName": false,
          "excludePaths": [
            "src/innerVendor/lentochka/docker/php/apache2/apache2.conf"
          ]
        }
      ]
    }
  ]
}
